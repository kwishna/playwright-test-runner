{
    "appenders": {
      "console": {
        "type": "console"
      },
      "file": {
        "type": "file",
        "filename": "logs/app.log",
        "maxLogSize": 10485760,
        "backups": 3,
        "compress": true,
        "encoding": "utf-8",
        "pattern": "-yyyy-MM-dd"
      }
    },
    "categories": {
      "default": {
        "appenders": ["console", "file"],
        "level": "debug"
      }
    }
  }
  